# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/portfolio?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret (Random string, min 32 characters)
# You can generate using: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long

# Admin Password Hash
# Generate using: node scripts/generatePasswordHash.js "your_password_here"
# Example: node scripts/generatePasswordHash.js "YourSecurePassword123!"
ADMIN_PASSWORD_HASH=$2a$10$your_bcrypt_hash_here

# CORS Configuration
# For development, use: *
# For production, use your frontend URL
CORS_ORIGIN=*
FRONTEND_URL=http://localhost:3000

# Email Configuration (for contact form)
# If using Gmail, use App Password (not regular password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM=your_email@gmail.com
CONTACT_EMAIL=your_email@gmail.com

# MongoDB Options (Optional)
# MONGODB_DB_NAME=portfolio
# MONGODB_SERVER_SELECTION_TIMEOUT_MS=8000
# MONGODB_TLS_ALLOW_INVALID_CERT=false

